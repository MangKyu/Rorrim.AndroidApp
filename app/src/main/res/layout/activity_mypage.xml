<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="activity" type="com.rorrim.mang.smartmirror.Activity.MyPageActivity"/>
        <variable name="user" type="com.rorrim.mang.smartmirror.Model.User"/>
    </data>


    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".Activity.MyPageActivity"
        tools:showIn="@layout/activity_mypage">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/menu"
                android:layout_width="33dp"
                android:layout_height="55dp"
                android:layout_marginBottom="-78dp"
                android:layout_weight="0.1"
                android:background="@drawable/menu"
                android:onClick="@{activity::gotoAlarm}" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8" />

            <ImageButton
                android:id="@+id/menu_user"
                android:layout_width="39dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/menu"
                android:layout_weight="0.1"
                android:background="@drawable/user" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:text="마이페이지"
            android:textSize="25sp"
            android:layout_weight="1"/>

        <android.widget.LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/faceid_bg"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="FACE ID"
                android:textColor="@color/myWhite"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                />

            <android.widget.RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                >

                <ImageButton
                    android:id="@+id/mypage_camera_btn"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="80dp"
                    android:background="@drawable/camera_bt"
                    android:onClick="@{activity::captureCamera}" />

                <ImageButton
                    android:id="@+id/mypage_album_btn"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80dp"
                    android:background="@drawable/album_bt"
                    android:onClick="@{activity::getAlbum}" />
            </android.widget.RelativeLayout>

            <android.widget.LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/mypage_face_iv"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="left"
                    android:layout_margin="20dp"
                    app:imageUrl="@{user.imageUrl}"
                    />

            </android.widget.LinearLayout>




        </android.widget.LinearLayout>

        <!--
        <TextView
            android:id="@+id/mypage_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/mypage_face_iv"
            android:layout_marginTop="224dp"
            android:singleLine="true"
            android:text="연락처"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/mypage_phone_tv"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/mypage_phone"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:text="@{user.phoneNumber}"
            android:textSize="20sp" />
                    -->

    </LinearLayout>
</layout>