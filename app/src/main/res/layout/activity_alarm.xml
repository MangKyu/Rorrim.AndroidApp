<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="activity" type="com.rorrim.mang.smartmirror.Activity.AlarmActivity"/>
    </data>


    <RelativeLayout
        android:id="@+id/calendar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/myBlue"
        tools:context=".Activity.AlarmActivity"
        tools:showIn="@layout/activity_alarm">

        <com.rorrim.mang.smartmirror.Activity.MenuView
            android:id="@+id/alarm_menu_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.rorrim.mang.smartmirror.Activity.MenuView>

        <Spinner
            android:id="@+id/alarm_ctg_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alarm_menu_layout"
            android:entries="@array/category">
        </Spinner>

        <Button
            android:id="@+id/alarm_send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:onClick="@{()->activity.sendCategoryName()}"
            android:layout_below="@id/alarm_ctg_spinner"/>

    </RelativeLayout>
</layout>